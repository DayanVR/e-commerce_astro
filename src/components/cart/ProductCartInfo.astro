---
const { product } = Astro.props;
import ConfigAmount from "@components/ConfigAmount.tsx";
---

<>
  <span class="mx-auto w-full border first-of-type:border-0"></span>

  <div class="flex flex-row gap-3.5">
    <img
      src={product.thumbnail}
      alt={product.title}
      class="h-24 w-24 rounded-full"
    />
    <div class="flex w-full flex-col justify-between gap-1 text-left">
      <div>
        <h3 class="text-left font-satochi text-base">
          {product.title}
        </h3>
        <p class="font-satochi text-xs">
          Size: <span class="opacity-60">Medium</span>
        </p>
        <p class="font-satochi text-xs">
          Color: <span class="opacity-60">Red</span>
        </p>
      </div>
      <div class="flex flex-row items-center justify-between">
        <p class="font-satochi text-sm">${product.price}</p>
        <ConfigAmount client:load stock={product.stock} />
      </div>
    </div>
  </div>
</>
