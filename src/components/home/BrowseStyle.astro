---
import { Image } from "astro:assets";
import casualCloth from "@images/home/casual.webp";
import formalCloth from "@images/home/formal.webp";
import gymCloth from "@images/home/gym.webp";
import partyCloth from "@images/home/party.webp";
---

<section class="mb:pb-8 rounded-3xl bg-secondary px-6 lg:p-16 place-self-center pb-4 pt-10 justify-self-center flex flex-col mx-auto container">
  <h3 class="text-center">BROWSE BY DRESS STYLE</h3>
  <div
    class="min-h-min grid-cols-2 mx-auto gap-4 md:grid md:grid-rows-2 lg:max-h-[598px] lg:pt-4 lg:max-w-7xl place-self-center lg:grid-cols-3 lg:gap-5"
  >
    <div class="group col-span-1">
      <h4>Casual</h4>
      <Image src={casualCloth} alt="casual" loading="lazy" />
    </div>
    <div class="group col-span-1 lg:col-span-2">
      <h4 class="font-satochi text-2xl font-bold">Formal</h4>
      <Image src={formalCloth} alt="formal" loading="lazy" />
    </div>
    <div class="group col-span-1 lg:col-span-2">
      <h4 class="font-satochi text-2xl font-bold">Party</h4>
      <Image src={partyCloth} alt="party" loading="lazy" />
    </div>
    <div class="group col-span-1">
      <h4 class="font-satochi text-2xl font-bold">Gym</h4>
      <Image src={gymCloth} alt="gym" loading="lazy" />
    </div>
  </div>
</section>

<style>
  h4 {
    @apply absolute left-6 top-4 z-50 font-satochi text-2xl font-bold;
  }

  img {
    @apply float-end object-fill transition group-hover:scale-110 min-h-48 lg:min-h-52 xl:min-h-72;
  }
  section > div > div {
    @apply relative min-h-48 justify-items-center overflow-hidden rounded-2xl bg-white max-lg:max-w-96 max-md:my-4 md:max-h-52 lg:min-h-52 xl:max-h-72;
  }
</style>
